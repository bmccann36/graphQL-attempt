{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6", "esnext"],
    "noImplicitAny": true,
    "rootDir": "./src",
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "node_modules" ]
}
